@model SessionView
@{
    ViewData["Title"] = "AddSession";
}

<h1>Создать сеанс</h1>

<form asp-action="AddSession" asp-controller="Manager">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="MovieId">Фильм</label>
            <select asp-for="MovieId">
                @foreach (var movie in Model.Movies) 
                {
                    <option value="@movie.Id">
                        @movie.Title
                    </option>
                }
            </select>
            <span asp-validation-for="MovieId" />
        </div>
        <div class="form-group">
            <label asp-for="HallId">Зал</label>
            <select asp-for="HallId">
                @foreach (var hall in Model.Halls) 
                {
                    <option value="@hall.Id">
                        @hall.Number
                    </option>
                }
            </select>
            <span asp-validation-for="MovieId" />
        </div>
        <div class="form-group">
            <label asp-for="SessionTime">Дата и время</label>
            <input asp-for="SessionTime" asp-format="{0:yyyy-MM-ddTHH:mm}"/>
            <span asp-validation-for="SessionTime" />
        </div>
        <div class="form-group">
            <label asp-for="Is3d">3D</label>
            <input asp-for="Is3d"/>
            <span asp-validation-for="Is3d" />
        </div>
        <div class="form-group" style="margin: 15px 0;">
            <input type="submit" value="Создать" class="btn btn-outline-dark" />
        </div> 
    </div>
</form>
